    <script>
        // Create floating hearts
        const floatingHeartsContainer = document.getElementById('floatingHearts');
        const heartIcons = ['üíñ', '‚ù§Ô∏è', 'üíï', 'üíì', 'üíó', 'üíò'];
        
        for (let i = 0; i < 25; i++) {
            const heart = document.createElement('div');
            heart.className = 'floating-heart';
            heart.innerHTML = heartIcons[Math.floor(Math.random() * heartIcons.length)];
            
            const leftPos = Math.random() * 100;
            heart.style.left = `${leftPos}%`;
            
            const size = Math.random() * 1.5 + 0.8;
            heart.style.fontSize = `${size}rem`;
            
            const delay = Math.random() * 5;
            const duration = Math.random() * 10 + 10;
            heart.style.animationDelay = `${delay}s`;
            heart.style.animationDuration = `${duration}s`;
            
            floatingHeartsContainer.appendChild(heart);
        }
        
        // Create moving animals that float around the screen
        const movingAnimalsContainer = document.getElementById('movingAnimals');
        const animals = ['üêº', 'üê∞', 'üêß', 'ü¶ä', 'üê®', 'üê±', 'üê∂', 'üêπ', 'ü¶â', 'üê∏', 'ü¶ã', 'üêû'];
        const movingAnimals = [];
        
        function createMovingAnimal() {
            const animal = document.createElement('div');
            const randomAnimal = animals[Math.floor(Math.random() * animals.length)];
            animal.className = 'moving-animal';
            animal.innerHTML = randomAnimal;
            animal.dataset.type = randomAnimal;
            
            // Random starting position
            const startX = Math.random() * (window.innerWidth - 100);
            const startY = Math.random() * (window.innerHeight - 100);
            
            animal.style.left = `${startX}px`;
            animal.style.top = `${startY}px`;
            
            // Random animation
            const animationTypes = ['animalFloat', 'bouncing', 'swinging', 'wiggling'];
            const randomAnim = animationTypes[Math.floor(Math.random() * animationTypes.length)];
            
            if (randomAnim !== 'animalFloat') {
                animal.style.animation = `${randomAnim} ${Math.random() * 3 + 2}s infinite`;
            } else {
                // Custom floating path for animalFloat
                const duration = Math.random() * 30 + 20;
                animal.style.animation = `animalFloat ${duration}s linear infinite`;
            }
            
            // Random size
            const size = Math.random() * 0.8 + 1.2;
            animal.style.fontSize = `${size * 2.5}rem`;
            
            // Random color tint
            const colors = ['#e84393', '#6c5ce7', '#00cec9', '#fd79a8', '#fdcb6e', '#a29bfe'];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            animal.style.color = randomColor;
            
            // Click event for moving animals
            animal.addEventListener('click', function(e) {
                e.stopPropagation();
                
                // Create burst effect
                for (let i = 0; i < 8; i++) {
                    const burst = document.createElement('div');
                    burst.innerHTML = this.innerHTML;
                    burst.style.position = 'fixed';
                    burst.style.fontSize = '1.5rem';
                    burst.style.color = randomColor;
                    burst.style.zIndex = '1000';
                    burst.style.left = `${e.clientX}px`;
                    burst.style.top = `${e.clientY}px`;
                    burst.style.pointerEvents = 'none';
                    
                    // Random burst direction
                    const angle = (i / 8) * Math.PI * 2;
                    const distance = 100;
                    const burstX = Math.cos(angle) * distance;
                    const burstY = Math.sin(angle) * distance;
                    
                    burst.style.setProperty('--burst-x', `${burstX}px`);
                    burst.style.setProperty('--burst-y', `${burstY}px`);
                    burst.style.animation = 'burstFloat 1s ease-out forwards';
                    
                    document.body.appendChild(burst);
                    
                    // Remove after animation
                    setTimeout(() => {
                        burst.remove();
                    }, 1000);
                }
                
                // Show animal message
                const animalMessages = {
                    'üêº': "You're as rare and precious as a panda!",
                    'üê∞': "You make my heart hop with joy!",
                    'üêß': "Like penguins, we'll always find our way back to each other!",
                    'ü¶ä': "Clever and beautiful, just like you!",
                    'üê®': "I'd hug you as tightly as a koala hugs a tree!",
                    'üê±': "You're as graceful and lovely as a cat!",
                    'üê∂': "Loyal and loving, just like you!",
                    'üêπ': "Small but full of love, just like our moments together!",
                    'ü¶â': "Wise beyond words, just like our connection!",
                    'üê∏': "You make ordinary moments magical!",
                    'ü¶ã': "Our love transforms everything beautifully!",
                    'üêû': "Small but brings so much luck to my life!"
                };
                
                const popupEmoji = document.getElementById('popupEmoji');
                const popupMessage = document.getElementById('popupMessage');
                const animalPopup = document.getElementById('animalPopup');
                const overlay = document.getElementById('overlay');
                
                popupEmoji.textContent = randomAnimal;
                popupMessage.textContent = animalMessages[randomAnimal] || "You're amazing and I think of you always!";
                
                animalPopup.classList.add('active');
                overlay.classList.add('active');
                
                // Move the animal to a new random position
                const newX = Math.random() * (window.innerWidth - 100);
                const newY = Math.random() * (window.innerHeight - 100);
                this.style.left = `${newX}px`;
                this.style.top = `${newY}px`;
            });
            
            movingAnimalsContainer.appendChild(animal);
            movingAnimals.push({
                element: animal,
                x: startX,
                y: startY,
                speedX: (Math.random() - 0.5) * 2,
                speedY: (Math.random() - 0.5) * 2
            });
            
            return animal;
        }
        
        // Create multiple moving animals
        for (let i = 0; i < 10; i++) {
            setTimeout(() => {
                createMovingAnimal();
            }, i * 500);
        }
        
        // Interactive heart
        const interactiveHeart = document.getElementById('interactiveHeart');
        let heartSize = 1;
        
        interactiveHeart.addEventListener('click', function(e) {
            // Create floating heart effect
            for (let i = 0; i < 12; i++) {
                const burstHeart = document.createElement('div');
                burstHeart.innerHTML = 'üíñ';
                burstHeart.style.position = 'fixed';
                burstHeart.style.fontSize = '2rem';
                burstHeart.style.color = '#e84393';
                burstHeart.style.zIndex = '1000';
                burstHeart.style.left = `${e.clientX}px`;
                burstHeart.style.top = `${e.clientY}px`;
                burstHeart.style.pointerEvents = 'none';
                
                // Random burst direction
                const angle = (i / 12) * Math.PI * 2;
                const distance = 80;
                const burstX = Math.cos(angle) * distance;
                const burstY = Math.sin(angle) * distance;
                
                burstHeart.style.setProperty('--burst-x', `${burstX}px`);
                burstHeart.style.setProperty('--burst-y', `${burstY}px`);
                burstHeart.style.animation = 'burstFloat 1.5s ease-out forwards';
                
                document.body.appendChild(burstHeart);
                
                setTimeout(() => {
                    burstHeart.remove();
                }, 1500);
            }
            
            // Grow the heart
            heartSize += 0.1;
            if (heartSize > 1.5) heartSize = 1;
            interactiveHeart.style.transform = `scale(${heartSize})`;
            
            // Change color randomly
            const colors = ['#e84393', '#6c5ce7', '#00cec9', '#fd79a8'];
            const randomColor = colors[Math.floor(Math.random() * colors.length)];
            interactiveHeart.style.color = randomColor;
            
            // Change emoji randomly
            const hearts = ['üíñ', '‚ù§Ô∏è', 'üíï', 'üíì', 'üíó', 'üíò', 'üíù'];
            const randomHeart = hearts[Math.floor(Math.random() * hearts.length)];
            interactiveHeart.innerHTML = randomHeart;
        });
        
        // Memory generator
        const memoryText = document.getElementById('memoryText');
        const memoryBtn = document.getElementById('memoryBtn');
        
        const memories = [
            "I imagine our first meeting will be magical, with butterflies and happy tears.",
            "I can't wait to hold your hand for the first time and see your smile in person.",
            "We'll go on long walks together, talking about everything and nothing at all.",
            "I picture us sharing our favorite foods and discovering new favorites together.",
            "We'll watch the sunset together, grateful that the distance is finally behind us.",
            "I imagine laughing together so much that our cheeks hurt from smiling.",
            "We'll create our own little traditions that are just ours.",
            "I can't wait to hear your voice without any digital delay between us.",
            "We'll explore new places together, making memories in every corner.",
            "Just thinking about hugging you for the first time makes my heart race."
        ];
        
        memoryBtn.addEventListener('click', function() {
            let newMemory;
            do {
                newMemory = memories[Math.floor(Math.random() * memories.length)];
            } while (newMemory === memoryText.textContent);
            
            memoryText.style.opacity = '0';
            setTimeout(() => {
                memoryText.textContent = newMemory;
                memoryText.style.opacity = '1';
            }, 300);
            
            memoryBtn.style.transform = 'scale(0.95)';
            setTimeout(() => {
                memoryBtn.style.transform = 'scale(1)';
            }, 150);
        });
        
        // Music player
        const musicBtn = document.getElementById('musicBtn');
        
        musicBtn.addEventListener('click', function() {
            window.open('https://music.youtube.com/watch?v=6JHu3b-pbh8&si=st9SFCQ1UH-Nwf5q', '_blank');
            
            musicBtn.innerHTML = '<i class="fas fa-check"></i> Song Opened!';
            musicBtn.style.background = 'linear-gradient(to right, #00b894, #00cec9)';
            
            setTimeout(() => {
                musicBtn.innerHTML = '<i class="fas fa-play"></i> Play Our Song Again';
                musicBtn.style.background = 'linear-gradient(to right, #e84393, #fd79a8)';
            }, 2000);
        });
        
        // Animal info interactions
        const animalInfos = document.querySelectorAll('.animal-info');
        const animalPopup = document.getElementById('animalPopup');
        const popupEmoji = document.getElementById('popupEmoji');
        const popupMessage = document.getElementById('popupMessage');
        const closePopup = document.getElementById('closePopup');
        const overlay = document.getElementById('overlay');
        
        const animalMessages = {
            panda: {
                emoji: "üêº",
                message: "Just like a panda, you're incredibly rare and precious. I feel so lucky to have you in my life!"
            },
            rabbit: {
                emoji: "üê∞",
                message: "You make my heart hop with joy! Every message from you feels like a little happy jump."
            },
            penguin: {
                emoji: "üêß",
                message: "Penguins mate for life, and even when they're apart, they always find their way back to each other. Just like us!"
            },
            fox: {
                emoji: "ü¶ä",
                message: "You're as clever and beautiful as a fox! I love how our conversations are always so interesting."
            },
            koala: {
                emoji: "üê®",
                message: "I wish I could hug you as tightly as a koala hugs a tree! You're my comfort and joy."
            },
            cat: {
                emoji: "üê±",
                message: "You're as graceful and lovely as a cat! And just like cats choose their humans, I choose you every day."
            }
        };
        
        animalInfos.forEach(animal => {
            animal.addEventListener('click', function() {
                const animalType = this.getAttribute('data-animal');
                const animalData = animalMessages[animalType];
                
                popupEmoji.textContent = animalData.emoji;
                popupMessage.textContent = animalData.message;
                
                animalPopup.classList.add('active');
                overlay.classList.add('active');
                
                this.style.transform = 'translateY(-8px) scale(1.1)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 500);
            });
        });
        
        closePopup.addEventListener('click', function() {
            animalPopup.classList.remove('active');
            overlay.classList.remove('active');
        });
        
        overlay.addEventListener('click', function() {
            animalPopup.classList.remove('active');
            overlay.classList.remove('active');
        });
        
        // Animate content on load
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 200);
            });
            
            const animalElements = document.querySelectorAll('.animal-info');
            animalElements.forEach((animal, index) => {
                animal.style.opacity = '0';
                animal.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    animal.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
                    animal.style.opacity = '1';
                    animal.style.transform = 'translateY(0)';
                }, 800 + (index * 100));
            });
            
            // Occasionally add new moving animals
            setInterval(() => {
                if (movingAnimals.length < 15) {
                    createMovingAnimal();
                }
            }, 10000);
        });
    </script>
</body>
</html>
